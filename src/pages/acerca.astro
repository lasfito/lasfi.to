---
import {FaEnvelope, FaGithub} from "react-icons/fa/index.js";
import PageHTML from "../layouts/PageHTML.astro";
import {SHORT_RESUME_ES} from "../consts";
import {SITE} from "../consts";
---

<PageHTML
  title="Acerca"
  description="Conoce todo acerca de Lasfito"
  image={SITE.image}
  lang="es-MX"
  type="website"
  date="2021-05-28"
>
  <section
    class="mx-auto mt-20 flex h-[90vh] max-w-[70ch] flex-col items-center justify-evenly px-10 leading-loose"
  >
    <h1 class="text-3xl text-primario">
      ¿Quién es <strong>Lasfito</strong> ?
    </h1>

    <h2 class="my-5 text-3xl md:text-4xl">Resumen</h2>
    <p class="text-justify text-xl">
      {SHORT_RESUME_ES}
    </p>

    <h2 class="mt-10 text-3xl md:text-4xl">Contacto</h2>

    <div class="z-10 my-4 text-texto-sft">
      <ul class="flex flex-col text-xl no-underline">
        <li class="my-3">
          <a
            href="https://github.com/lasfito"
            target="_blank"
            class="snake flex items-center gap-4"
            rel="noreferrer"
          >
            <FaGithub />
            Revisa mi perfil en Github
          </a>
        </li>
        <li class="my-3">
          <a
            href="mailto:hola@lasfi.to"
            class="snake flex items-center gap-4"
            rel="noreferrer"
          >
            <FaEnvelope />O envíame un correo
          </a>
        </li>
      </ul>
    </div>
  </section>
</PageHTML>
